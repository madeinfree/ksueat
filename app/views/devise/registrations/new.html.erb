<h2>簡易註冊</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, label: '信箱（登入帳號）', placeholder: "email", :required => true, :autofocus => true %>
    <%= f.input :name, label: '暱稱（加入可更改）', placeholder: "nick name", :required => true, :autofocus => true %>
    <%= f.input :school, label: '學校（加入後不可更改）', placeholder: "例：崑山科技大學", :required => true, :autofocus => true %>
    <%= f.input :faculty, label: '系別（加入不可更改）', placeholder: "例：資訊傳播系", :required => true, :autofocus => true %>
    <%= f.input :password,label: '密碼',placeholder: "password", :required => true %>
    <%= f.input :password_confirmation, label: '再次輸入密碼', placeholder: "password confirmation", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
