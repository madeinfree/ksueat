<h2>登入</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input( :email, label: "信箱", placeholder: "email" , :required => false, :autofocus => true )%>
    <%= f.input :password, label: "密碼", placeholder: "password", :required => false %>
    <%= f.input :remember_me, label: "記住我", :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
